			n.NOTIC_ID,
			n.DEPT_CODE as "deptCode",
			n.PUBLISHER as "publisher",
			n.TILTLE as "tiltle",
			n.RELATION_TYPE as "relationType",
			n.CREATED_USER_ROLE as "createdUserRole",
			n.FEEDBACK_TYPE as "feedbackType",
			n.period
		from NOTICE_MISSION nm
		  left join NOTICE n on nm.NOTIC_ID = n.NOTIC_ID
		where nm.VALID_IND = '1' 
		  and n.valid_ind = '1'
		  and n.status not in ('0','9')
		  and ( n.PUBLISH_DATE = trunc(sysdate) or nm.next_publish_date = trunc(sysdate) )
		  <!-- and ( nm.PUBLISH_DATE = trunc(sysdate) or nm.next_publish_date = trunc(sysdate) ) -->
	</select>
	
