	<select id="queryTaskByNow" parameterType="map" resultMap="BaseResultMap">
		select 
			nm.UPDATED_USER,
			nm.VALID_IND,
			nm.CREATED_DATE,
			nm.CREATED_USER,
			nm.UPDATED_DATE,
			nm.NEXT_PUBLISH_DATE,
